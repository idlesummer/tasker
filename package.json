{
  "name": "@idlesummer/task-runner",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple task pipeline runner with CLI spinners and formatters",
  "keywords": [
    "task",
    "pipeline",
    "build",
    "runner",
    "spinner",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idlesummer/task-runner.git"
  },
  "license": "MIT",
  "author": "idlesummer <09louisthebob@gmail.com> (https://github.com/idlesummer)",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "examples/*"
  ],
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  },
  "dependencies": {
    "fdir": "^6.4.2",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.2",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.2.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.5",
    "@types/picomatch": "^3.0.1",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  }
}
